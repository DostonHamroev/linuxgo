<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <uz.hamroev.linuxgo.shadow.ShadowView
        android:id="@+id/spaceShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shadowDx="5dp"
        app:shadowDy="10dp"
        app:shadowRadius="1dp">

        <uz.hamroev.linuxgo.typeWriter.TypeWriter
            android:id="@+id/type_writer"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fof"
            android:gravity="center"
            android:text="@string/linux_go"
            android:textColor="@color/main"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </uz.hamroev.linuxgo.shadow.ShadowView>


</LinearLayout>